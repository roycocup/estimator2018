{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table table-dark">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Score</th>
            <th>Estimation</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.score | default(0)}}</td>
                <td>{{ project.estimation | default(0) }}</td>
                <td><a href="{{ path('project_process', {'id': project.id}) }}">process</a></td>
            </tr>
        </tbody>
    </table>

    <h3>Breakdown</h3>
    <a class="btn btn-default" data-toggle="collapse" href="#breakdown" role="button" aria-expanded="false" aria-controls="collapseExample">
        Sheeee moh
    </a>
    <div id="breakdown" class="collapse">
        <table class="table">
            <thead>
                <th>Weight</th>
                <th>Question text</th>
                <th>Score</th>
            </thead>
            <tbody>
            {% for key, answer in project.answers %}
                <tr>
                    <td><b>{{ answer.question.weight }}</b></td>
                    <td>{{ answer.question.text }}</td>
                    <td>{{ answer.lastScore }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('project_index') }}">back to list</a>

    {#<a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>#}
    {#{{ include('project/_delete_form.html.twig') }}#}
{% endblock %}
